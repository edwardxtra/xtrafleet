rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isParticipant(participants) {
      return request.auth.uid in participants;
    }

    function isAdmin() {
      return isSignedIn() &&
        get(/databases/$(database)/documents/owner_operators/$(request.auth.uid)).data.isAdmin == true;
    }

    function isSuperAdmin() {
      return isSignedIn() &&
        get(/databases/$(database)/documents/owner_operators/$(request.auth.uid)).data.isAdmin == true &&
        get(/databases/$(database)/documents/owner_operators/$(request.auth.uid)).data.adminRole == 'super_admin';
    }

    match /users/{userId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isSuperAdmin();
    }

    // SECURITY FIX: Restrict driver invitation access
    match /driver_invitations/{invitationId} {
      // Allow reading specific invitation (for validation)
      allow get: if true; // Token-based validation, checked server-side
      // Only allow owner to list their own invitations
      allow list: if isSignedIn() &&
                     request.query.where[0][0] == 'ownerId' &&
                     request.query.where[0][2] == request.auth.uid;
      // Only owner can create invitations
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.ownerId;
      // Only owner or super_admin can update/delete their invitations
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isSuperAdmin());
    }

    match /owner_operators/{ownerOperatorId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isSignedIn() && isOwner(ownerOperatorId);
      // SECURITY FIX: Only owner can update their own profile
      allow update: if isSignedIn() && (isOwner(ownerOperatorId) || isSuperAdmin());
      allow delete: if isSignedIn() && (isOwner(ownerOperatorId) || isSuperAdmin());

      match /drivers/{driverId} {
        allow read: if isSignedIn();
        allow list: if isSignedIn();
        allow create: if isSignedIn() && isOwner(ownerOperatorId);
        allow update: if isSignedIn() && (isOwner(ownerOperatorId) || request.auth.uid == driverId || isAdmin());
        allow delete: if isSignedIn() && (isOwner(ownerOperatorId) || isSuperAdmin());
      }

      match /loads/{loadId} {
        allow read: if isSignedIn();
        allow list: if isSignedIn();
        allow create: if isSignedIn() && isOwner(ownerOperatorId);
        // TEMPORARY: Allow any signed-in user to update for debugging
        allow update: if isSignedIn();
        allow delete: if isSignedIn() && (isOwner(ownerOperatorId) || isSuperAdmin());
      }

      match /subscriptions/{subscriptionId} {
        allow read: if isSignedIn() && (isOwner(ownerOperatorId) || isAdmin());
        allow write: if isSignedIn() && (isOwner(ownerOperatorId) || isSuperAdmin());
      }
    }

    // Collection Group Query for drivers
    match /{path=**}/drivers/{driverId} {
      allow read: if isSignedIn();
    }

    // Collection Group Query for loads
    match /{path=**}/loads/{loadId} {
      allow read: if isSignedIn();
    }

    // Matches collection
    match /matches/{matchId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    // TLAs collection
    match /tlas/{tlaId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn() && isSuperAdmin();
    }

    // Conversations collection
    match /conversations/{conversationId} {
      allow read: if isSignedIn() && isParticipant(resource.data.participants);
      allow create: if isSignedIn() && isParticipant(request.resource.data.participants);
      allow update: if isSignedIn() && isParticipant(resource.data.participants);
      allow delete: if isSignedIn() && isSuperAdmin();

      match /messages/{messageId} {
        allow read: if isSignedIn() && isParticipant(get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants);
        allow create: if isSignedIn() && isParticipant(get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants);
        allow update: if isSignedIn() && isParticipant(get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants);
        allow delete: if isSignedIn() && isSuperAdmin();
      }
    }

    // Notifications collection
    match /notifications/{notificationId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      // Allow creating notifications for any user (needed for match acceptance/rejection notifications)
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && (resource.data.userId == request.auth.uid || isSuperAdmin());
    }

    // Audit logs - users can read their own, admins can read all
    match /audit_logs/{logId} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    // Admin audit logs - only admins can read
    match /admin_audit/{logId} {
      allow read: if isSignedIn() && isAdmin();
      allow create: if isSignedIn() && isAdmin();
      allow update, delete: if false;
    }
  }
}
